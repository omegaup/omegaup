{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./built/",
    "sourceMap": true,
    "target": "es6",
    "downlevelIteration": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "ES2020.Promise",
      "dom.iterable"
    ],
    "types": [
      "bootstrap-datepicker",
      "bootstrap.v3.datetimepicker"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "listFiles": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "paths": {
      "@/*": [
        "frontend/www/*"
      ]
    }
  },
  "include": [
    "./frontend/www/js/omegaup/**/*.vue",
    "./frontend/www/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./cypress",
    "./frontend/www/js/omegaup/components/**/**/*.stories.ts",
    "./frontend/www/rekarel"
  ]
}
